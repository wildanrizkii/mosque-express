        <main class="main">
            <section class="home section" id="home">
                <div class="home__container container grid">
                    <img src="img/masjid-img.png" alt="home image" class="home__img">
                    <div class="home__data">
                        <h1 class="home__title">
                            Nikmati Ketenangan Beragama dan Pertumbuhan Spiritual di Masjid Kami
                        </h1>

                        <p class="home__description">
                            Sholat adalah waktu pertemuan dengan Allah dan kenaikan orang beriman
                        </p>

                        <a href="https://www.google.com/maps/dir//4J9M%2BGJW+Mesjid+Al-Hikmah+Cijotang,+Cibeunying,+Kec.+Cimenyan,+Kabupaten+Bandung,+Jawa+Barat+40191/@-6.8811403,107.6334654,19z/data=!4m8!4m7!1m0!1m5!1m1!1s0x2e68e7b02011c8fb:0xdf26ff63888f5133!2m2!1d107.6341227!2d-6.881149?entry=ttu" target="_blank" class="button">
                            Kunjungi Masjid <i class="ri-arrow-right-line"></i>
                        </a>
                    </div>
                </div>

                <img src="img/leaf-branch-2.png" alt="home image" class="home__leaf-1">
                <img src="img/leaf-branch-4.png" alt="home image" class="home__leaf-2">
            </section>

            <!--==================== Jadwal Sholat ====================-->
            <section class="jadwal section" id="jadwal">
                <div class="jadwal__container container grid">
                    <div class="jadwal__data">
                        <span class="section__subtitle">Jadwal Sholat Selanjutnya</span>
                        <h2 class="section__title jadwal__title"> 
                            <% if (waktuSekarang >= waktuIsya || waktuSekarang <= waktuSubuh) { %>
                                Sholat Subuh
                            <% } else if (waktuSekarang >= waktuSubuh && waktuSekarang <= waktuDzuhur) { %>
                                Sholat Dzuhur
                            <% } else if (waktuSekarang >= waktuDzuhur && waktuSekarang <= waktuAshar) { %>
                                Sholat Ashar
                            <% } else if (waktuSekarang >= waktuAshar && waktuSekarang <= waktuMaghrib) { %>
                                Sholat Maghrib
                            <% } else if (waktuSekarang >= waktuMaghrib && waktuSekarang <= waktuIsya) { %>
                                Sholat Isya
                            <% } %>
                        </h2>

                        <p class="jadwal__description">
                            <% if (waktuSekarang >= waktuIsya || waktuSekarang <= waktuSubuh) { %>
                                <%= jadwalSholat.subuh %> WIB
                            <% } else if (waktuSekarang >= waktuSubuh && waktuSekarang <= waktuDzuhur) { %>
                                <%= jadwalSholat.dzuhur %> WIB
                            <% } else if (waktuSekarang >= waktuDzuhur && waktuSekarang <= waktuAshar) { %>
                                <%= jadwalSholat.ashar %> WIB
                            <% } else if (waktuSekarang >= waktuAshar && waktuSekarang <= waktuMaghrib) { %>
                                <%= jadwalSholat.maghrib %> WIB
                            <% } else if (waktuSekarang >= waktuMaghrib && waktuSekarang <= waktuIsya) { %>
                                <%= jadwalSholat.isya %> WIB
                            <% } %>
                        </p>
                    </div>

                    <div class="jadwal__sholat">
                        <span class="sholat__container grid">
                            <div class="time">
                                <p>Sholat Subuh</p>
                                <div class="jam">
                                    <%= jadwalSholat.subuh %> WIB
                                </div>
                            </div>
                            <div class="time">
                                <p>Syuruq / Terbit </p>  
                                <div class="jam">
                                    <%= jadwalSholat.terbit %> WIB
                                </div>
                            </div>
                            <div class="time">
                                <p>Sholat Dzuhur  </p> 
                                <div class="jam">
                                    <%= jadwalSholat.dzuhur %> WIB
                                </div> 
                            </div>
                            <div class="time">
                                <p>Sholat Ashar</p> 
                                <div class="jam">
                                    <%= jadwalSholat.ashar %> WIB
                                </div> 
                            </div>
                            <div class="time">
                                <p>Sholat Maghrib</p> 
                                <div class="jam">
                                    <%= jadwalSholat.maghrib %> WIB
                                </div>  
                            </div>
                            <div class="time">
                                <p>Sholat Isya</p>   
                                <div class="jam">
                                    <%= jadwalSholat.isya %> WIB
                                </div>
                            </div>
                        </span>
                    </div>
                </div>

                <img src="img/leaf-branch-1.png" alt="jadwal image" class="jadwal__leaf">
            </section>

            <!--==================== POPULAR ====================-->
